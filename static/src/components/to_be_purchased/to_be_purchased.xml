<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- El nombre DEBE ser stock_transit_allocation.ToBePurchased -->
    <t t-name="stock_transit_allocation.ToBePurchased" owl="1">
        <div class="o_purchase_tbp_container p-4 bg-white" style="height: 100%; overflow-y: auto;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold text-primary">
                    <i class="fa fa- industry me-2"/>To Be Purchased (Torre de Control)
                </h2>
                <div class="d-flex gap-2">
                    <button class="btn btn-secondary" t-on-click="loadData">
                        <i class="fa fa-refresh"/> Actualizar
                    </button>
                    <button class="btn btn-primary" t-on-click="createPOs" t-att-disabled="state.selectedLines.length === 0">
                        <i class="fa fa-cart-plus me-2"/> Generar Órdenes de Compra (<t t-esc="state.selectedLines.length"/>)
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover shadow-sm">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 40px;"></th>
                            <th>Nombre del artículo</th>
                            <th>Tipo</th>
                            <th>Grupo</th>
                            <th>Categoría</th>
                            <th>Proveedor Preferido</th>
                            <th class="text-center">Disp. (A)</th>
                            <th class="text-center">Trán. (I)</th>
                            <th class="text-center">OC (P)</th>
                            <th class="text-center">Total A+I+P</th>
                            <th class="text-center">Retenido (SO)</th>
                            <th class="text-center">Por comprar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.data" t-as="product" t-key="product.id">
                            <!-- Fila de Producto -->
                            <tr class="table-info fw-bold" t-on-click="() => this.toggleExpand(product.id)" style="cursor: pointer;">
                                <td class="text-center">
                                    <i t-attf-class="fa #{state.expanded[product.id] ? 'fa-chevron-down' : 'fa-chevron-right'} text-primary"/>
                                </td>
                                <td><t t-esc="product.name"/></td>
                                <td><t t-esc="product.type"/></td>
                                <td><t t-esc="product.group"/></td>
                                <td><t t-esc="product.category"/></td>
                                <td><t t-esc="product.vendor"/></td>
                                <td class="text-center"><t t-esc="product.qty_a"/></td>
                                <td class="text-center"><t t-esc="product.qty_i"/></td>
                                <td class="text-center"><t t-esc="product.qty_p"/></td>
                                <td class="text-center"><t t-esc="product.qty_total"/></td>
                                <td class="text-center"><t t-esc="product.qty_so"/></td>
                                <td t-attf-class="text-center #{product.qty_to_buy > 0 ? 'text-danger' : 'text-success'}">
                                    <t t-esc="product.qty_to_buy"/>
                                </td>
                            </tr>
                            
                            <!-- Detalle de SO# -->
                            <tr t-if="state.expanded[product.id]">
                                <td colspan="12" class="p-0 bg-light">
                                    <div class="p-3">
                                        <table class="table table-sm table-bordered bg-white mb-0">
                                            <thead class="bg-secondary text-white">
                                                <tr>
                                                    <th class="text-center" style="width: 40px;">Select</th>
                                                    <th>SO#</th>
                                                    <th>Fecha OV</th>
                                                    <th>Requerido</th>
                                                    <th>Cliente</th>
                                                    <th>Ubicación</th>
                                                    <th>Descripción</th>
                                                    <th class="text-end">Cant. OV</th>
                                                    <th class="text-end">Asignada</th>
                                                    <th class="text-end">Pendiente</th>
                                                    <th>Nota Soporte</th>
                                                    <th>OC# / Cant. OC</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="product.so_lines" t-as="so" t-key="so.id">
                                                    <tr>
                                                        <td class="text-center">
                                                            <input type="checkbox" 
                                                                   class="form-check-input"
                                                                   t-att-checked="state.selectedLines.includes(so.id)"
                                                                   t-on-change="(ev) => this.toggleSelection(so.id, ev)"/>
                                                        </td>
                                                        <td class="fw-bold"><t t-esc="so.so_name"/></td>
                                                        <td><t t-esc="so.date"/></td>
                                                        <td><t t-esc="so.commitment_date"/></td>
                                                        <td><t t-esc="so.customer"/></td>
                                                        <td><t t-esc="so.location"/></td>
                                                        <td class="text-muted"><small><t t-esc="so.description"/></small></td>
                                                        <td class="text-end"><t t-esc="so.qty_orig"/></td>
                                                        <td class="text-end"><t t-esc="so.qty_assigned"/></td>
                                                        <td class="text-end fw-bold text-primary"><t t-esc="so.qty_pending"/></td>
                                                        <td><t t-esc="so.note"/></td>
                                                        <td>
                                                            <span t-if="so.po_name" class="badge rounded-pill bg-success">
                                                                <i class="fa fa-shopping-cart me-1"/>
                                                                <t t-esc="so.po_name"/> (<t t-esc="so.po_qty"/>)
                                                            </span>
                                                            <span t-else="" class="text-muted small">Sin OC</span>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>