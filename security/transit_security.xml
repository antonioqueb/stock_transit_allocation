<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_transit">
        <field name="name">Gestión de Tránsito</field>
        <field name="description">Niveles de acceso para Torre de Control</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_transit_user" model="res.groups">
        <field name="name">Usuario Tránsito</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_transit_manager" model="res.groups">
        <field name="name">Gerente Tránsito</field>
        <field name="implied_ids" eval="[(4, ref('group_transit_user'))]"/>
        <!-- CORRECCIÓN: Se eliminó el campo 'users' que causaba el conflicto en Odoo 19 -->
    </record>
</odoo>