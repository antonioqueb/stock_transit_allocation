<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_transit_reassign_wizard_form" model="ir.ui.view">
        <field name="name">transit.reassign.wizard.form</field>
        <field name="model">transit.reassign.wizard</field>
        <field name="arch" type="xml">
            <form string="Reasignación en Tránsito">
                <group>
                    <div class="alert alert-info" role="alert">
                        Esta acción cambiará la asignación de las placas seleccionadas y actualizará las reservas (Holds) correspondientes en el sistema.
                    </div>
                </group>
                <group>
                    <group>
                        <field name="current_partner_id"/>
                        <field name="line_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                    <group>
                        <field name="new_partner_id" placeholder="Seleccione para asignar, vacío para liberar"/>
                    </group>
                </group>
                <group>
                    <field name="reason" placeholder="Ej. Cliente canceló, Cambio de material..."/>
                </group>
                <footer>
                    <button string="Confirmar Reasignación" name="action_apply" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
