<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_transit_reassign_wizard_form" model="ir.ui.view">
        <field name="name">transit.reassign.wizard.form</field>
        <field name="model">transit.reassign.wizard</field>
        <field name="arch" type="xml">
            <form string="Reasignación en Tránsito">
                <group>
                    <div class="alert alert-warning" role="alert" invisible="not new_partner_id">
                        ¡Atención! Debe seleccionar la Orden de Venta del cliente para guardar.
                    </div>
                </group>
                <group>
                    <group string="Estado Actual">
                        <field name="current_partner_id"/>
                        <field name="current_order_id" readonly="1"/>
                        <field name="line_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                    <group string="Nueva Asignación">
                        <field name="new_partner_id" placeholder="Seleccione para asignar, vacío para liberar"/>
                        <field name="new_order_id" required="new_partner_id" invisible="not new_partner_id"
                               placeholder="Seleccione el pedido..."/>
                    </group>
                </group>
                <group>
                    <field name="reason" placeholder="Ej. Cliente canceló, Cambio de material..."/>
                </group>
                <footer>
                    <button string="Confirmar Reasignación" name="action_apply" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>